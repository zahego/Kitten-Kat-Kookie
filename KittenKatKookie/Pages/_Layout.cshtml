
<!DOCTYPE html>
<html>
<head>
    <title>Kitten Kat Kookie</title>
    <link rel="stylesheet" href="~/site.css" />
</head>
<body>

    <header class="container site-header">
        <div class="row">
            <div class="main-logo">
                <img src="https://www.brandcrowd.com/gallery/brands/pictures/picture15865786573447.png" />
            <h1>Kitten Kat <a href="/">Kookie</a></h1>
            </div>
        </div>
        <div class="row">
            <nav class="navbar">
                <ul class="nav nav-pills">
                    <li><a href="/About">About</a></li>
                    <li><a href="/Blog">Blog</a></li>
                    <li><a class="active" href="/">Recipes</a></li>
                    <li><a href="/Portfolio">Portfolio</a></li>
                    <li><a href="/Contact">Contact</a></li>
                </ul>
                <ul class="nav nav-pills">
                    <li>
                        @if (!User.Identity.IsAuthenticated)
                        {
            <a href="/Account/Login">Login</a> }
        else
        {
<form method="post" asp-page="/Account/Login" asp-page-handler="LogoutForMePlease">
    <div class="input-group">
        <span>@User.Identity.Name</span>
        <button type="submit" class="btn btn-link">Logout</button>
    </div>
</form>}
                    </li>
                </ul>
            </nav>
        </div>
        <div class="row">
            @if (IsSectionDefined("Title"))
            {
            @RenderSection("Title", required: false)
            }
            else
            {
                //default value
                <h2 class="Title">@ViewData["Recipe-Title-Name"]</h2>
            }
        </div>
    </header>

    <div class="container">
        @RenderBody()

    </div>

    <footer>
        <div class="text-center">
            <span class="text-muted">Last Rendered: @DateTime.Now </span>
        </div>
    </footer>
</body>
</html>