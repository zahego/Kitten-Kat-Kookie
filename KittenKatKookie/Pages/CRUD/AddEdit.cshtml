@page "{id?}"

@model AddEditModel
@{
    ViewData["Recipe-Title-Name"] = Model.IsNewRecipe ? "New Recipe" : "Edit Recipe";
}

@if (!ModelState.IsValid)
{
        <h3 class="text-danger"> Validation Errors</h3>
        <div asp-validation-summary="All"></div>
 
}


<!--enctype="multipart/form-data" is needed for file upload-->
<form method="post" class="form-horizontal" enctype="multipart/form-data">
    <div class="form-group">
        <label asp-for="AddEditRecipe.Name" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <input asp-for="AddEditRecipe.Name" class="form-control" />
            <span asp-validation-for="AddEditRecipe.Name"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddEditRecipe.Description" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="3" asp-for="AddEditRecipe.Description" class="form-control"></textarea>
            <span asp-validation-for="AddEditRecipe.Description"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddEditRecipe.Ingredients" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="AddEditRecipe.Ingredients" class="form-control"></textarea>
            <span asp-validation-for="AddEditRecipe.Ingredients"></span>
        </div>
    </div>

    <div class="form-group">
        <label asp-for="AddEditRecipe.Directions" class="col-md-2 control-label"></label>
        <div class="col-md-10">
            <textarea rows="5" asp-for="AddEditRecipe.Directions" class="form-control"></textarea>
            <span asp-validation-for="AddEditRecipe.Directions"></span>
        </div>
    </div>
    <label asp-for="UploadImage" class="col-md-2 control-label"></label>
    <input asp-for="UploadImage" type="file" />

    <div class="form-group">
        <div class="col-md-offset-2 col-md-10">
            <button type="submit" class="btn btn-primary">Save</button>
            @if (!Model.IsNewRecipe)
            {
                //asp page handler must match the [handler name] behind onpost or onget method (OnPostDeleteDangerDontDoIt in AddEdit.cshtml.cs
                <button type="submit" asp-page-handler="DeleteDangerDontDoIt" class="btn btn-danger">Delete</button>
            }
        </div>
    </div>

</form>